
<section class="py-3 py-md-5">
    <div class="container">
        <div class="card mx-auto col-12 col-md-4">
            <div class="card-body p-md-4">
                <h2>Update {{drone.name}}</h2>
                <p class="lead">Create your new awesome drone.</p>
                <form action="/drones/{{drone._id}}/edit" method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="{{drone.name}}">
                    </div>
                    <div class="mb-3">
                        <label for="propellors" class="form-label">Propellers</label>
                        <input type="number" class="form-control" id="propellers" name="propellers" value="{{drone.propellers}}">
                    </div>
                    <div class="mb-3">
                        <label for="maxSpeed" class="form-label">Max speed</label>
                        <input type="number" class="form-control" id="maxSpeed" name="maxSpeed" value="{{drone.maxSpeed}}">
                    </div>
                    <div class="d-flex">
                        <button type="submit" class="btn btn-primary flex-fill me-2">Update</button>
                        <a href="/drones/{{drone._id}}/edit" class="btn btn-light border">Clear</a>
                    </div>
                    
                </form>
            </div>
        </div>
        
    </div>
</section>